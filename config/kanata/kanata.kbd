;; https://shom.dev/start/using-kanata-to-remap-any-keyboard/
(defcfg
  concurrent-tap-hold yes
  process-unmapped-keys no
  )

(defsrc
  p [ ]
  lsft
  lalt
  )

(deflayer default
          p [ ]
          lsft
          lalt
          )

(deflayer alt-mod
          MediaPlayPause MediaTrackPrevious MediaTrackNext
          _
          _
          )

(defvar
  tap-time 100
  hold-time 200
  )

(defchordsv2-experimental
  (lalt lsft) (layer-toggle alt-mod) 50 first-release (alt-mod)
  )
